{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "module": "NodeNext",

    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
    "strictNullChecks": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "rootDir": ".",
    "outDir": "../dist/cli"
  },
  "include": ["."]
}
